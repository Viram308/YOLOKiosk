<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/settingsActivity"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/sharedPref"
        android:background="#4db8ff"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Shared Preference"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textColor="#0066cc"
        android:text=""
        android:id="@+id/groupssid"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/ssid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textColor="#0066cc"
        android:text=""
        android:id="@+id/grouppass"/>

    <Button
        android:id="@+id/kioskModeBtn"
        android:background="@android:color/holo_red_dark"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off Kiosk Mode"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:gravity="center"/>
</LinearLayout>